# =========================================
# File Upload Settings
# =========================================

# Protect uploads directory (if exists)
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} ^/uploads
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ - [F,L]
</IfModule>
