{
  "rules": {
    "blogs": {
      ".read": true,
      ".write": "auth != null && (auth.token.email == 'juliandrozario@gmail.com' || auth.token.email == 'abirsabirhossain@gmail.com')",
      "$blogId": {
        ".read": true,
        ".write": "auth != null && (auth.token.email == 'juliandrozario@gmail.com' || auth.token.email == 'abirsabirhossain@gmail.com')"
      }
    },
    "categories": {
      ".read": true,
      ".write": "auth != null && (auth.token.email == 'juliandrozario@gmail.com' || auth.token.email == 'abirsabirhossain@gmail.com')"
    },
    "contactInfo": {
      ".read": true,
      ".write": "auth != null && (auth.token.email == 'juliandrozario@gmail.com' || auth.token.email == 'abirsabirhossain@gmail.com')"
    },
    "comments": {
      ".read": true,
      "$blogId": {
        ".write": "auth != null",
        "$commentId": {
          ".write": "auth != null && (data.child('userId').val() == auth.uid || auth.token.email == 'juliandrozario@gmail.com' || auth.token.email == 'abirsabirhossain@gmail.com')"
        }
      }
    },
    "likes": {
      ".read": true,
      "$blogId": {
        "$userId": {
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    }
  }
}
